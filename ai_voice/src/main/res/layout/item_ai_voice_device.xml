<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/ai_voice_action_bg"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ai_voice_device_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ai_voice_device_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ai_device" />

        <TextView
            android:id="@+id/ai_voice_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/ai_voice_device_entry"
            android:textColor="@color/ai_voice_text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/ai_voice_chevron"
            android:src="@drawable/ic_ai_chevron_right" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
