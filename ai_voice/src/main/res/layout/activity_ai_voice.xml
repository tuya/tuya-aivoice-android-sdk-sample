<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_voice_background">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ai_voice_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/ai_voice_tab_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ai_voice_tab_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/ai_voice_action_bg"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ai_voice_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ai_voice_tab_home_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/ai_voice_home_title"
                android:src="@drawable/ic_ai_home_selected" />

            <TextView
                android:id="@+id/ai_voice_tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/ai_voice_home_title"
                android:textColor="@color/ai_voice_tab_selected"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ai_voice_tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ai_voice_tab_mine_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/ai_voice_mine_title"
                android:src="@drawable/ic_ai_user" />

            <TextView
                android:id="@+id/ai_voice_tab_mine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/ai_voice_mine_title"
                android:textColor="@color/ai_voice_tab_unselected"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
